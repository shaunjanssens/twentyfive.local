<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Conversation" table="conversation">
    <id name="conversationId" type="integer" column="conversation_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="type" type="integer" column="type" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="teamId" type="integer" column="team_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="user1Id" type="integer" column="user1_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="user2Id" type="integer" column="user2_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true"/>
    <field name="deletedAt" type="datetime" column="deleted_at" nullable="true"/>
    <many-to-many field="userUser" target-entity="User" inversed-by="conversationConversation" fetch="LAZY">
      <join-table name="conversation_has_user">
        <join-columns>
          <join-column name="conversation_conversation_id" referenced-column-name="conversation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="user_user_id" referenced-column-name="user_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
