<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Task" table="task">
    <indexes>
      <index name="fk_task_user1_idx" columns="user_id"/>
      <index name="fk_task_task_category1_idx" columns="task_category_id"/>
      <index name="fk_task_team1_idx" columns="team_id"/>
    </indexes>
    <id name="taskId" type="integer" column="task_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="140" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="deadline" type="datetime" column="deadline" nullable="false"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true"/>
    <field name="deletedAt" type="datetime" column="deleted_at" nullable="true"/>
    <field name="status" type="integer" column="status" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="taskCategory" target-entity="TaskCategory" fetch="LAZY">
      <join-columns>
        <join-column name="task_category_id" referenced-column-name="task_category_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="team" target-entity="Team" fetch="LAZY">
      <join-columns>
        <join-column name="team_id" referenced-column-name="team_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="user_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
